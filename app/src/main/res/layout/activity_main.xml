<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laixiaolong.pichandler.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBottom"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="240dp"/>

        <RadioGroup
            android:id="@+id/rbGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:text="Default"
                android:layout_weight="1"
                android:checked="true"
                android:id="@+id/rbDefault"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:text="RGB"
                android:layout_weight="1"
                android:id="@+id/rbRgb"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:text="YUV"
                android:layout_weight="1"
                android:id="@+id/rbYuv"
                android:layout_height="wrap_content"/>

        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectPicture"
            android:text="选择图片"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="red offset:"
            />

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/offsetRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:max="255"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="green offset:"
            />

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/offsetGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:max="255"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blue offset:"
            />

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/offsetBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:max="255"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alpha offset:"
            />

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/offsetAlpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:max="255"
            />


    </LinearLayout>

</ScrollView>
