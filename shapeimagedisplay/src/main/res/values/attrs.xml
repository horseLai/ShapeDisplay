        <attr name="radius_right_bottom"/>
        <attr name="radius"/>
        <attr name="asCircle"/>
        <attr name="borderWidth"/>
        <attr name="borderColor"/>
    </declare-styleable>


    <declare-styleable name="ShapeLayout">
        <attr name="radius_left_top"/>
        <attr name="radius_left_bottom"/>
        <attr name="radius_right_top"/>
        <attr name="radius_right_bottom"/>
        <attr name="radius"/>
        <attr name="asCircle"/>
        <attr name="borderWidth"/>
        <attr name="borderColor"/>
    </declare-styleable>

</resources>